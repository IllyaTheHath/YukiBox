<ui:Page
    x:Class="YukiBox.Desktop.Views.TaskbarView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:c="clr-namespace:YukiBox.Desktop.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpers="clr-namespace:YukiBox.Desktop.Helpers"
    xmlns:local="clr-namespace:YukiBox.Desktop.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="clr-namespace:YukiBox.Desktop.Models"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    xmlns:vm="clr-namespace:YukiBox.Desktop.ViewModels"
    Title="TaskbarView"
    d:DataContext="{d:DesignInstance Type=vm:TaskbarViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <ScrollViewer c:FluentScrollViewer.Enabled="True">
        <ui:SimpleStackPanel Margin="5">
            <GroupBox Header="{helpers:I18N Taskbar.Searchbox}">
                <ui:SimpleStackPanel Margin="10,0" Spacing="10">
                    <ui:ToggleSwitch
                        FontSize="14"
                        Header="{helpers:I18N Taskbar.Searchbox.EnableMusicUpdate}"
                        IsOn="{Binding EnableMusicUpdate}"
                        OffContent="{helpers:I18N ToggleButton.Off}"
                        OnContent="{helpers:I18N ToggleButton.On}" />
                    <ui:ToggleSwitch
                        FontSize="14"
                        Header="{helpers:I18N Taskbar.Searchbox.CompatibleStartIsBack}"
                        IsOn="{Binding CompatibleStartIsBack}"
                        OffContent="{helpers:I18N ToggleButton.Off}"
                        OnContent="{helpers:I18N ToggleButton.On}" />
                    <TextBox
                        ui:ControlHelper.Header="{helpers:I18N Taskbar.Searchbox.DefaultText}"
                        FontSize="14"
                        Text="{Binding SearchBoxTextDefault}" />
                    <ui:RadioButtons
                        ui:ControlHelper.Header="{helpers:I18N Taskbar.Searchbox.CheckingPlayer}"
                        FontSize="14"
                        ItemsSource="{Binding MusicPlayers}"
                        MaxColumns="5"
                        SelectedItem="{Binding SelectedPlayer}">
                        <ui:RadioButtons.ItemTemplate>
                            <DataTemplate DataType="{x:Type model:MusicPlayer}">
                                <TextBlock Text="{Binding DisplayName}" />
                            </DataTemplate>
                        </ui:RadioButtons.ItemTemplate>
                    </ui:RadioButtons>
                    <Button Command="{Binding SaveChangeSearchbox}" Content="{helpers:I18N System.Setting.Save}" />
                </ui:SimpleStackPanel>
            </GroupBox>
            <GroupBox Header="{helpers:I18N Taskbar.Taskbar}">
                <ui:ToggleSwitch
                    FontSize="14"
                    Header="{helpers:I18N Taskbar.Taskbar.WheelVolume}"
                    IsOn="{Binding EnableWheelVolume}"
                    OffContent="{helpers:I18N ToggleButton.Off}"
                    OnContent="{helpers:I18N ToggleButton.On}" />
            </GroupBox>
        </ui:SimpleStackPanel>
    </ScrollViewer>
</ui:Page>
<ui:Page
    x:Class="YukiBox.Desktop.Views.SettingView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fw="clr-namespace:SourceChord.FluentWPF;assembly=FluentWPF"
    xmlns:helpers="clr-namespace:YukiBox.Desktop.Helpers"
    xmlns:local="clr-namespace:YukiBox.Desktop.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    xmlns:vm="clr-namespace:YukiBox.Desktop.ViewModels"
    Title="SettingView"
    d:DataContext="{d:DesignInstance Type=vm:SettingViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <ui:SimpleStackPanel Margin="5" fw:PointerTracker.Enabled="True">
        <TextBlock Text="{Binding Text}" />
        <Button
            Width="100"
            Height="50"
            HorizontalAlignment="Left"
            Command="{Binding ClickCommand}"
            Content="{helpers:I18N System.AppName}"
            Style="{StaticResource ButtonRevealStyle}" />
        <ComboBox
            MinWidth="240"
            d:DataContext="{d:DesignInstance Type=helpers:I18NSource}"
            DataContext="{x:Static helpers:I18NSource.Instance}"
            ItemsSource="{Binding SupportedLanguages}"
            SelectedItem="{Binding CurrentLanguage}">
            <ui:ControlHelper.Header>
                <ui:SimpleStackPanel Orientation="Horizontal" Spacing="4">
                    <TextBlock Text="{helpers:I18N System.Language}" />
                </ui:SimpleStackPanel>
            </ui:ControlHelper.Header>
        </ComboBox>
        <Button
            Width="100"
            Height="50"
            HorizontalAlignment="Left"
            Command="{Binding SaveClickCommand}"
            Content="save" />
        <Button
            Width="100"
            Height="50"
            HorizontalAlignment="Left"
            Command="{Binding ReadClickCommand}"
            Content="read" />
        <Button
            Width="100"
            Height="50"
            HorizontalAlignment="Left"
            Command="{Binding DeleteClickCommand}"
            Content="delete" />
    </ui:SimpleStackPanel>

</ui:Page>

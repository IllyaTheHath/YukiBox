<ui:Page
    x:Class="YukiBox.Desktop.Views.SettingView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:c="clr-namespace:YukiBox.Desktop.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpers="clr-namespace:YukiBox.Desktop.Helpers"
    xmlns:local="clr-namespace:YukiBox.Desktop.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    xmlns:vm="clr-namespace:YukiBox.Desktop.ViewModels"
    Title="SettingView"
    d:DataContext="{d:DesignInstance Type=vm:SettingViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <ScrollViewer c:FluentScrollViewer.Enabled="True">
        <StackPanel Margin="5">
            <GroupBox Header="{helpers:I18N System.Setting.General}">
                <ui:SimpleStackPanel Spacing="10">
                    <ui:ToggleSwitch
                        Header="{helpers:I18N System.RunAtStartUp}"
                        IsOn="{Binding EnableStartUp}"
                        OffContent="{helpers:I18N ToggleButton.Off}"
                        OnContent="{helpers:I18N ToggleButton.On}" />
                    <ComboBox
                        MinWidth="240"
                        ItemsSource="{Binding SupportedLanguages, Mode=OneWay}"
                        SelectedItem="{Binding CurrentLanguage}">
                        <ui:ControlHelper.Header>
                            <ui:SimpleStackPanel Orientation="Horizontal" Spacing="4">
                                <TextBlock Text="{helpers:I18N System.Language}" />
                            </ui:SimpleStackPanel>
                        </ui:ControlHelper.Header>
                    </ComboBox>
                </ui:SimpleStackPanel>
            </GroupBox>
            <GroupBox Header="{helpers:I18N System.Setting.Additional}">
                <StackPanel HorizontalAlignment="Left">
                    <Button Command="{Binding ResetSettingCommand}" Content="{helpers:I18N System.Setting.Restore}" />
                </StackPanel>
            </GroupBox>
        </StackPanel>
    </ScrollViewer>
</ui:Page>
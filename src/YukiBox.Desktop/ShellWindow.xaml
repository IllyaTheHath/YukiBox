<Window
    x:Class="YukiBox.Desktop.ShellWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fw="clr-namespace:SourceChord.FluentWPF;assembly=FluentWPF"
    xmlns:helpers="clr-namespace:YukiBox.Desktop.Helpers"
    xmlns:local="clr-namespace:YukiBox.Desktop"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    xmlns:vm="clr-namespace:YukiBox.Desktop.ViewModels"
    Title="{helpers:I18N System.AppName}"
    Width="1024"
    Height="768"
    d:DataContext="{d:DesignInstance Type=vm:ShellViewModel}"
    ui:TitleBar.ExtendViewIntoTitleBar="False"
    ui:WindowHelper.UseModernWindowStyle="True"
    mc:Ignorable="d">

    <ui:NavigationView
        FooterMenuItemsSource="{Binding FooterNavMenuItems, Mode=OneWay}"
        IsBackButtonVisible="Collapsed"
        IsSettingsVisible="False"
        IsTabStop="False"
        IsTitleBarAutoPaddingEnabled="True"
        MenuItemsSource="{Binding NavMenuItems, Mode=OneWay}"
        SelectedItem="{Binding SelectedItem, Mode=TwoWay}"
        SelectionChanged="NavigateView">
        <ui:NavigationView.MenuItemTemplate>
            <DataTemplate>
                <ui:NavigationViewItem Content="{Binding Name, Mode=OneTime}" ToolTipService.ToolTip="{Binding Tooltip, Mode=OneTime}">
                    <ui:NavigationViewItem.Icon>
                        <ui:SymbolIcon Symbol="{Binding Glyph, Mode=OneTime}" />
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>
            </DataTemplate>
        </ui:NavigationView.MenuItemTemplate>
        <StackPanel>
            <ui:Frame x:Name="shellFrame" Margin="0,0,0,0" />
        </StackPanel>
    </ui:NavigationView>

</Window>

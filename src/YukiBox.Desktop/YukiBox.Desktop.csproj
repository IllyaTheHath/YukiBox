<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net5.0-windows10.0.19041.0</TargetFramework>
    <UseWPF>true</UseWPF>
    <StartupObject>YukiBox.Desktop.Program</StartupObject>
    <AssemblyName>YukiBox</AssemblyName>
    <Platforms>x64</Platforms>
    <NeutralLanguage>en-US</NeutralLanguage>
    <ApplicationManifest>Properties\app.manifest</ApplicationManifest>
    <ApplicationIcon>Assets\Images\logo.ico</ApplicationIcon>
    <AssemblyVersion>1.0.0.1</AssemblyVersion>
    <Authors>Kagura Chiyuki</Authors>
    <Description>An application thats contains sort of tools.</Description>
    <Copyright>Copyright © 2021 Kagura Chiyuki</Copyright>
    <PackageProjectUrl>https://github.com/IllyaTheHath/YukiBox</PackageProjectUrl>
    <PackageLicenseExpression>https://github.com/IllyaTheHath/YukiBox/blob/main/LICENSE</PackageLicenseExpression>
    <RepositoryUrl>https://github.com/IllyaTheHath/YukiBox</RepositoryUrl>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Assets\Images\logo.ico" />
    <None Remove="Assets\Images\logo.png" />
    <None Remove="Assets\Images\logo_white.png" />
  </ItemGroup>

  <ItemGroup>
    <!--<PackageReference Include="FluentWPF" Version="0.9.0" />-->
    <PackageReference Include="Hardcodet.NotifyIcon.Wpf" Version="1.1.0" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="5.0.1" />
    <PackageReference Include="Microsoft.Toolkit.Mvvm" Version="7.0.1" />
    <PackageReference Include="Microsoft.Xaml.Behaviors.Wpf" Version="1.1.31" />
    <PackageReference Include="ModernWpfUI" Version="0.9.4" />
    <PackageReference Include="PInvoke.User32" Version="0.7.104" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Properties\Strings.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>Strings.resx</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Update="Properties\Strings.resx">
      <Generator>PublicResXFileCodeGenerator</Generator>
      <LastGenOutput>Strings.Designer.cs</LastGenOutput>
    </EmbeddedResource>
  </ItemGroup>  

  <ItemGroup>
    <Resource Include="Assets\Images\logo.ico" />
    <Resource Include="Assets\Images\logo.png" />
    <Resource Include="Assets\Images\logo_white.png" />
  </ItemGroup>

</Project>
